<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:transitionGroup="false"
    android:focusable="false">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="328dp"
        android:layout_height="100dp"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginBottom="21dp"
        app:srcCompat="@drawable/logo" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="350dp"
        android:id="@+id/set_weight_dialog_center"
        android:layout_centerHorizontal="true"
        />

    <NumberPicker
        android:id="@+id/set_weight_dialog_number_2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="350dp"
        android:layout_toStartOf="@id/set_weight_dialog_center"
        android:layout_toLeftOf="@id/set_weight_dialog_center" />

    <NumberPicker
        android:id="@+id/set_weight_dialog_number_1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="350dp"
        android:layout_toStartOf="@id/set_weight_dialog_number_2"
        android:layout_toLeftOf="@id/set_weight_dialog_number_2" />

    <NumberPicker
        android:id="@+id/set_weight_dialog_number_3"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="350dp"
        android:layout_toEndOf="@id/set_weight_dialog_center"
        android:layout_toRightOf="@id/set_weight_dialog_center" />

    <NumberPicker
        android:id="@+id/set_weight_dialog_number_4"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="350dp"
        android:layout_toEndOf="@id/set_weight_dialog_number_3"
        android:layout_toRightOf="@id/set_weight_dialog_number_3" />

    <Button
        android:id="@+id/set_weight_dialog_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_weight_dialog_center"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="136dp"
        android:layout_toEndOf="@+id/set_weight_dialog_center"
        android:layout_toRightOf="@+id/set_weight_dialog_center"
        android:text="@string/cancel"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/set_weight_dialog_OK_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/set_weight_dialog_cancel_button"
        android:layout_alignBottom="@+id/set_weight_dialog_cancel_button"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="49dp"
        android:layout_toStartOf="@+id/set_weight_dialog_center"
        android:layout_toLeftOf="@+id/set_weight_dialog_center"
        android:text="@string/set"
        android:textAllCaps="false" />
</RelativeLayout>